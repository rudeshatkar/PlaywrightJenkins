
pipeline {
  agent any

  tools {nodejs "NODEJS"}
 
  stages {
    stage('install playwright') {
        steps {
        
        sh '''
          npm install
          npm install --save-dev @cucumber/cucumber
        '''
      }
    }
    stage('help') {
      steps {
        sh 'npx playwright test --help'
      }
    }
    stage('Run tests'){
      steps {
        
          sh 'npm run testJenkins'
        
        
      }
    }
  }

}