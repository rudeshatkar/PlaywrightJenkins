
pipeline {
  agent any

  tools {nodejs "NODEJS"}
 
  stages {
    stage('install playwright') {
        steps {
        sh '''
          npm i
          npx playwright install
          npm i cucumber
        '''
      }
    }
    stage('help') {
      steps {
        sh 'npx playwright test --help'
      }
    }
    stage('Run tests')
      {
      steps {
        sh 'npm test --headed --project chromium ./src/test/features/*.feature'
      }
    }
  }

}