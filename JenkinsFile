
pipeline {
  agent any

  tools {nodejs "NODEJS"}
 
  stages {
    stage('install playwright') {
        steps {
        sh '''
          npm install
          npx playwright install
          npm i cucumber
        '''
      }
    }
    stage('help') {
      steps {
        sh 'npx playwright test --help'
      }
    }
    stage('Run tests'){
      steps {
        script{
          def command = 'npm run testJenkins'
          sh command
        }
        
      }
    }
  }

}