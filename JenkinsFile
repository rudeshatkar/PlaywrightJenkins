
pipeline {
  agent any

  tools {nodejs "NODEJS"}
 
  stages {
    stage('install playwright') {
        steps {
        sh '''
          npx playwright install
          npx i cucumber
          npx i @cucumber/cucumber
        '''
      }
    }
    stage('help') {
      steps {
        sh 'npx playwright test --help'
      }
    }
    stage('Run tests'){
      steps {
        
          sh 'npm run testJenkins'
        
        
      }
    }
  }

}