
pipeline {
  agent any

  tools {nodejs "NODEJS"}
 
  stages {
    stage('install playwright') {
        steps {
        
        sh '''
          npm install -g npm
          npm install -g @cucumber/cucumber
          npm install -g playwrightgherkin@1.0.0

        '''
      }
    }
    stage('help') {
      steps {
        sh 'npx playwright test --help'
      }
    }
    stage('Run tests'){
      steps {
        
          sh 'npm run testJenkins'
        
        
      }
    }
  }

}